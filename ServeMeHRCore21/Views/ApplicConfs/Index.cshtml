                                    @Html.DisplayNameFor(model => model.LDAPConn)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LDAPPath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ManageHREmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ManageHREmailPass)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SMTPHost)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SMTPPort)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnableSSL)
                                </th>*@
