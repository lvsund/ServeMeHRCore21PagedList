                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileSystemUpload)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adactive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailConfirmation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modified)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppAdmin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BackAdmin)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.LDAPConn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LDAPPath)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManageHREmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManageHREmailPass)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SMTPHost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SMTPPort)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnableSSL)
                                    </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
