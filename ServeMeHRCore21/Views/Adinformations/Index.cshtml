@using X.PagedList;
@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core;
@model IPagedList<ServeMeHRCore21.Models.Adinformations>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "Index";
}
<h2>Active Directory Information</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "Adinformations", FormMethod.Get))
{


    <p>
        Search: @Html.TextBox("SearchString")
    </p>
    <p>
        <input type="submit" value="Search" />
    </p>

}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Active Directory Information</h1>
            </div>
            <div class="panel-body">
                <table id="ServiceRequests-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    @*<table class="table">*@
                    <thead>
                        <tr>
                            <th>
                                @Html.ActionLink("Id", "Index", new { sortOrder = ViewBag.IdSortParm })
                            </th>
                            <th>
                                SAmaccountName
                            </th>
                            <th>
                                DisplayName
                            </th>
                            <th>
                                Mail
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                TelephoneNumber
                            </th>
                            <th>
                                GivenName
                            </th>
                            <th>
                                @Html.ActionLink("Sn", "Index", new { sortOrder = ViewBag.SnSortParm })

                            </th>
                            <th>
                                Company
                            </th>
                            <th>
                                WwWhomePage
                            </th>
                            <th>
                                Mobile
                            </th>
                            <th>
                                Cn
                            </th>
                            <th>
                                Appusername
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SAmaccountName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TelephoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GivenName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WwWhomePage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Appusername)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),PagedListRenderOptions.ClassicPlusFirstAndLast)


